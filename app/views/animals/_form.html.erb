<div data-controller="animal-form">
  <%= form_with(model: animal) do |form| %>
    <% if animal.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

        <ul>
          <% animal.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, "data-animal-form-target": "name", "data-action": "keyup->animal-form#countCharacters" %>
      Characters: <span data-animal-form-target="counter"><%= animal.name.to_s.size %></span>
    </div>

    <div>
      <%= form.label :age, style: "display: block" %>
      <%= form.number_field :age %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
